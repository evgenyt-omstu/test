<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>WebSocket / SockJS Test</title>

  <!-- SockJS + STOMP -->
  <script src="https://cdn.jsdelivr.net/npm/sockjs-client@1/dist/sockjs.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/stompjs@2.3.3/lib/stomp.min.js"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    button {
      margin-right: 10px;
    }
    #log {
      margin-top: 20px;
      padding: 10px;
      border: 1px solid #ccc;
      height: 300px;
      overflow-y: auto;
      background: #f9f9f9;
      font-family: monospace;
    }
  </style>
</head>
<body>

<h2>WebSocket / SockJS test</h2>

<div>
  <button onclick="connectWs()">Connect WS</button>
  <button onclick="connectSockJs()">Connect SockJS</button>
  <button onclick="disconnect()">Disconnect</button>
</div>

<br/>

<div>
  <input id="message" type="text" placeholder="Message to /app/test" size="40">
  <button onclick="sendMessage()">Send</button>
</div>

<div id="log"></div>

<script>
  let stompClient = null;

  function log(msg) {
    const logDiv = document.getElementById("log");
    logDiv.innerHTML += msg + "<br/>";
    logDiv.scrollTop = logDiv.scrollHeight;
  }

  function connectWs() {
    disconnect();

    const protocol = location.protocol === "https:" ? "wss" : "ws";
    const wsUrl = protocol + "://" + location.host + "/ws";

    log("Connecting via WebSocket: " + wsUrl);

    const socket = new WebSocket(wsUrl);
    stompClient = Stomp.over(socket);

    stompClient.debug = null;

    stompClient.connect({}, onConnected, onError);
  }

  function connectSockJs() {
    disconnect();

    const sockJsUrl = location.protocol + "//" + location.host + "/ws/sockjs";
    log("Connecting via SockJS: " + sockJsUrl);

    const socket = new SockJS(sockJsUrl);
    stompClient = Stomp.over(socket);

    stompClient.debug = null;

    stompClient.connect({}, onConnected, onError);
  }

  function onConnected() {
    log("CONNECTED");

    stompClient.subscribe("/topic", function (message) {
      log("TOPIC: " + message.body);
    });

    // если нужен конкретный топик
    stompClient.subscribe("/topic/test", function (message) {
      log("TOPIC /test: " + message.body);
    });
  }

  function onError(error) {
    log("ERROR: " + error);
  }

  function sendMessage() {
    if (!stompClient || !stompClient.connected) {
      log("Not connected");
      return;
    }

    const text = document.getElementById("message").value;

    stompClient.send("/app/test", {}, JSON.stringify({
      message: text,
      timestamp: new Date().toISOString()
    }));

    log("SENT: " + text);
  }

  function disconnect() {
    if (stompClient) {
      stompClient.disconnect(() => log("DISCONNECTED"));
      stompClient = null;
    }
  }
</script>

</body>
</html>
